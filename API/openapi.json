{
    "openapi": "3.1.0",
    "info": {
        "title": "API Documentation",
        "version": "0.1.0",
        "description": "API doc untuk projecty"
    },

    "servers": [
        {
            "url": "http://localhost:8080/api/v1"
        }
    ],
    "paths": {
        "/tahun-periode":{
            "get": {
                "tags": ["Struktur Organisasi"],
                "summary": "Get Tahun Periode",
                "operationId": "getTahunPeriode",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status":{
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data":{
                                            "type":"object",
                                            "properties": {
                                                "id":{
                                                    "type": "integer",
                                                    "description": "ID untuk periode"
                                                },
                                                "tahun": {
                                                    "type": "integer",
                                                    "description": "Tahun periode yang tersedia"
                                                }
                                            }   
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/struktur?year={year}":{
            "get": {
                "tags": ["Struktur Organisasi"],
                "summary": "Get Struktur Organisasi",
                "operationId": "getStrukturOrganisasi",
                "parameters": [
                    {
                        "name": "year",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 2023
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status":{
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data":{
                                            "type":"array",
                                            "items":{
                                               "$ref": "#/components/schemas/StrukturOrganisasi"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/posts":{
            "get": {
                "tags": ["Posts"],
                "summary": "Get All Posts",
                "operationId": "getAllPosts",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status":{
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data":{
                                            "type":"array",
                                            "items":{
                                                "$ref": "#/components/schemas/Post"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/posts/{slug}":{
            "get": {
                "tags": ["Posts"],
                "summary": "Get Post by Slug",
                "operationId": "getPostBySlug",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PostDetail"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Post not found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/categories":{
            "get": {
                "tags": ["Posts"],
                "summary": "Get All categories",
                "operationId": "getAllTags",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status":{
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data":{
                                            "type":"array",
                                            "items":{
                                                "type":"string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/posts/category/{category}":{
            "get": {
                "tags": ["Posts"],
                "summary": "Get Posts by Category",
                "operationId": "getPostsByCategory",
                "parameters": [
                    {
                        "name": "category",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Category not found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/projects":{
            "get": {
                "tags": ["Projects"],
                "summary": "Get All Projects",
                "operationId": "getAllProjects",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status":{
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data":{
                                            "type":"array",
                                            "items":{
                                                "$ref": "#/components/schemas/projects"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/projects/{slug}":{
            "get": {
                "tags": ["Projects"],
                "summary": "Get Project by Slug",
                "operationId": "getProjectBySlug",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/projectDetail"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Project not found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "StrukturOrganisasi": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID untuk struktur organisasi"
                    },
                    "nama": {
                        "type": "string",
                        "description": "Nama dari struktur organisasi"
                    },
                    "jabatan": {
                        "type": "string",
                        "description": "Jabatan dalam struktur organisasi"
                    },
                    "tahunPeriode": {
                        "type": "integer",
                        "description": "Tahun terkait dengan struktur organisasi"
                    },
                    "photo": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL foto dari anggota struktur organisasi"
                    },
                    "order": {
                        "type": "integer",
                        "description": "Urutan dalam struktur organisasi"
                    }
                }
            },
            "PostDetail":{
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID untuk post"
                    },
                    "title": {
                        "type": "string",
                        "description": "Judul dari post"
                    },
                    "author": {
                        "type": "string",
                        "description": "Penulis dari post"
                    },
                    "slug": {
                        "type": "string",
                        "description": "Slug untuk post"
                    },
                    "content": {
                        "type": "string",
                        "description": "Konten dari post"
                    },
                    "image": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL gambar terkait post"
                    },
                    "category": {
                        "type": "string",
                        "description": "Kategori dari post / TAG"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Tanggal dan waktu pembuatan post"
                    }
                }
            },
            "Post":{
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID untuk post"
                    },
                    "title": {
                        "type": "string",
                        "description": "Judul dari post"
                    },
                    "slug": {
                        "type": "string",
                        "description": "Slug untuk post"
                    },
                    "image": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL gambar terkait post"
                    },
                    "category": {
                        "type": "string",
                        "description": "Kategori dari post / TAG"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Tanggal dan waktu pembuatan post"
                    }
                }
            },
            "projects": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID untuk project"
                    },
                    "title": {
                        "type": "string",
                        "description": "Judul dari project"
                    },
                    "slug": {
                        "type": "string",
                        "description": "Slug untuk project"
                    },
                    "thumbnail": {
                        "type": "string",
                        "format": "uri",
                        "description": "URL gambar terkait project"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Tanggal dan waktu pembuatan project"
                    }
                }
            },
            "projectDetail": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID untuk project"
                    },
                    "title": {
                        "type": "string",
                        "description": "Judul dari project"
                    },
                    "slug": {
                        "type": "string",
                        "description": "Slug untuk project"
                    },
                    "photos": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "description": "ID untuk gambar"
                                },
                                "name": {
                                    "type": "string",
                                    "description": "Nama file gambar"
                                }
                            }
                        },
                        "description": "URL gambar terkait project"
                    },
                    "description": {
                        "type": "string",
                        "description": "description dari projecy"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Tanggal dan waktu pembuatan project"
                    }
                }
            }
        }
    }
}